set editing-mode vi
set keymap vi

# UTF8 locale settings
set convert-meta off
set input-meta on
set output-meta on

# put slashes after completed dirs
set mark-directories on
set mark-symlinked-directories on

# grab bag
set bell-style visible
set completion-ignore-case on
# if multiple matches for completion show matches rather than bell
set show-all-if-ambiguous on
